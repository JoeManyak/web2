{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": ["react","sonarjs"],
  "extends": ["eslint:recommended", "plugin:react/recommended","plugin:sonarjs/recommended"],
  "rules": {
    "comma-dangle": 0,
    "react/jsx-uses-vars": 1,
    "react/display-name": 1,
    "no-unused-vars": "warn",
    "no-unexpected-multiline": "warn",
    "sonarjs/elseif-without-else": 1,
    "prefer-destructuring": 1
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "15.6.1"
    }
  },
  "env": {
    "browser": true
  }
}
